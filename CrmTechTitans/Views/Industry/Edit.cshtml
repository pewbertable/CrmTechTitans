@model CrmTechTitans.Models.Industry

@{
    ViewData["Title"] = "Edit Industry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Breadcrumb Navigation -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Industry</a>
                    </li>

                    @if (Context.Request.Query["fromDetails"] == "true")
                    {
                        <li class="breadcrumb-item">
                            <a asp-action="Details" asp-route-id="@Model.ID" class="text-decoration-none">Details</a>
                        </li>
                    }

                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            <!-- Page Header -->
            <div class="mb-4">
                <h1 class="h3 mb-2">Edit Industry</h1>
                <p class="text-muted">Modify the details of the selected industry. Ensure all information is correct before saving.</p>
            </div>

            <!-- Industry Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ID" />

                        <!-- Industry Details Section -->
                        <div class="row g-3 mb-4">
                            <!-- Industry Name -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">Industry Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter Industry Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- NAICS Code -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NAICS" class="form-label">NAICS Code</label>
                                    <input asp-for="NAICS" class="form-control" placeholder="Enter NAICS Code" />
                                    <span asp-validation-for="NAICS" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                Back to Industries
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}