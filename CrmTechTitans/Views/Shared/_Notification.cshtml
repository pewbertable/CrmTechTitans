<script>
    $(document).ready(function () {
        // Configure toastr options only once
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Show notifications based on TempData
        @if (TempData["success"] != null)
        {
            <text>toastr.success('@TempData["success"]', 'Success');</text>
        }

        @if (TempData["error"] != null)
        {
            <text>toastr.error('@TempData["error"]', 'Error');</text>
        }

        @if (TempData["info"] != null)
        {
            <text>toastr.info('@TempData["info"]', 'Information');</text>
        }

        @if (TempData["warning"] != null)
        {
            <text>toastr.warning('@TempData["warning"]', 'Warning');</text>
        }
    });
</script>
