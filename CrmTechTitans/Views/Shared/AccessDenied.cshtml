@{
    ViewData["Title"] = "Access Denied";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card shadow-sm border-0 mb-4 bg-white">
                <div class="card-body p-5">
                    <div class="text-danger mb-4">
                        <i class="fas fa-exclamation-circle fa-5x"></i>
                    </div>
                    
                    <h1 class="h3 mb-3 font-weight-bold text-danger">Access Denied</h1>
                    
                    <p class="lead text-secondary mb-4">
                        You do not have permission to access this resource.
                    </p>
                    
                    <p class="text-muted mb-4">
                        If you believe you should have access to this page, please contact an administrator.
                    </p>
                    
                    <a asp-controller="Home" asp-action="Index" class="btn btn-dark px-4 py-2">
                        <i class="fas fa-home me-2"></i> Return to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 