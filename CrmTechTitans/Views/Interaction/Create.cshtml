@model CrmTechTitans.Models.Interaction

@{
    ViewData["Title"] = "Create Interaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hasValidationErrors = ViewBag.HasValidationErrors ?? false;
}

<link rel="stylesheet" href="~/css/multi-step-form.css" />

<div class="container py-4">
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white p-4">
            <div class="d-flex align-items-center">
                <div class="me-3 bg-primary bg-opacity-25 rounded-circle p-3">
                    <i class="fas fa-comments fa-2x"></i>
                </div>
                <div>
                    <h1 class="h3 mb-1">Create Interaction</h1>
                    <p class="mb-0">Fill in the details below to add a new interaction to the database.</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <p class="text-muted small mb-4"><span class="text-danger">*</span> Indicates a required field.</p>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <label asp-for="InteractionDetails" class="form-label">Interaction Details <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-comment"></i></span>
                            <textarea asp-for="InteractionDetails" class="form-control" rows="4" placeholder="Enter interaction details"></textarea>
                        </div>
                        <span asp-validation-for="InteractionDetails" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label asp-for="Date" class="form-label">Date <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input asp-for="Date" class="form-control" type="date" />
                        </div>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactId" class="form-label">Person <span class="text-danger">*</span></label>
                        <div class="mb-2">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" id="contactFilter" class="form-control" placeholder="Type to filter contacts..." onkeyup="filterContacts()">
                            </div>
                        </div>
                        <select asp-for="ContactId" class="form-select" id="contactSelect">
                            <option value="">Select a person</option>
                            @foreach (var contact in ViewBag.Contacts as List<CrmTechTitans.Models.Contact>)
                            {
                                <option value="@contact.ID">@contact.FullFormalName</option>
                            }
                        </select>
                        <span asp-validation-for="ContactId" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Interactions
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function filterContacts() {
            var input, filter, select, options, i;
            input = document.getElementById("contactFilter");
            filter = input.value.toLowerCase();
            select = document.getElementById("contactSelect");
            options = select.getElementsByTagName("option");

            for (i = 0; i < options.length; i++) {
                var txtValue = options[i].textContent || options[i].innerText;
                if (txtValue.toLowerCase().includes(filter)) {
                    options[i].style.display = "";
                } else {
                    options[i].style.display = "none";
                }
            }
        }
    </script>
}

@section Styles {
    <style>
        .bg-primary {
            background-color: #6c757d !important;
        }
    </style>
}
