@model CrmTechTitans.Models.Interaction

@{
    ViewData["Title"] = "Create Interaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Create Interaction</h1>
        <p class="text-muted">Add a new interaction to the database.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-comments"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">New Interaction</h2>
            </div>
        </div>
        <form asp-action="Create" method="post">
            <div class="member-card-content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="member-detail">
                    <i class="fas fa-comment"></i>
                    <div class="form-group">
                        <label asp-for="interaction" class="control-label">Interaction</label>
                        <textarea asp-for="interaction" class="form-control" rows="4" placeholder="Enter interaction details"></textarea>
                        <span asp-validation-for="interaction" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="member-card-footer">
                <button type="submit" class="button-1">
                    <i class="fas fa-save"></i> Create
                </button>
                <a asp-action="Index" class="button-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}