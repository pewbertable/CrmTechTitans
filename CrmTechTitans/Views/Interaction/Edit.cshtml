@model CrmTechTitans.Models.Interaction

@{
    ViewData["Title"] = "Edit Interaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <header class="page-header">
        <h1>Edit Interaction</h1>
        <p class="text-muted">Modify the details of the selected interaction. Ensure all information is correct before saving.</p>
    </header>

    <div class="member-card">
        <div class="member-card-header">
            <div class="member-avatar">
                <i class="fas fa-comments"></i>
            </div>
            <div class="member-info">
                <h2 class="member-name">Edit Interaction</h2>
            </div>
        </div>
        <div class="member-card-content">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="member-detail">
                    <i class="fas fa-comment"></i>
                    <div class="form-group">
                        <label asp-for="interaction" class="control-label">Interaction</label>
                        <textarea asp-for="interaction" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="interaction" class="text-danger"></span>
                    </div>
                </div>
                <div class="member-detail">
                    <i class="fas fa-calendar-alt"></i>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label">Interaction Date</label>
                        <input asp-for="Date" class="form-control" type="datetime-local" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="member-detail">
                    <i class="fas fa-user-tie"></i>
                    <div class="form-group">
                        <label asp-for="Person" class="control-label">Contacted Person</label>
                        <input asp-for="Person" class="form-control" placeholder="Enter Contacted Person" />
                        <span asp-validation-for="Person" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="member-card-footer">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Index" class="button-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
