@model CrmTechTitans.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-xxl-6">
            <!-- Page Header -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <div>
                    <h1 class="h3 mb-0 text-dark fw-bold">Delete User</h1>
                    <p class="text-secondary mb-0">Are you sure you want to delete this user?</p>
                </div>
            </div>

            <!-- Delete Confirmation Card -->
            <div class="card shadow-sm border-0 mb-4 bg-white">
                <div class="card-header bg-danger-subtle py-3">
                    <h5 class="mb-0 text-danger fw-bold">Warning</h5>
                </div>
                <div class="card-body p-lg-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i> This action cannot be undone. Deleting this user will permanently remove their account and access privileges.
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="mb-1 text-secondary">Username</p>
                            <p class="h5 mb-3">@Model.UserName</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 text-secondary">Email</p>
                            <p class="h5 mb-3">@Model.Email</p>
                        </div>
                        <div class="col-12">
                            <p class="mb-1 text-secondary">Roles</p>
                            <p class="h5">
                                @if (Model.Roles.Any())
                                {
                                    foreach (var role in Model.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No roles assigned</span>
                                }
                            </p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                <i class="fas fa-arrow-left me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger px-4 py-2">
                                <i class="fas fa-user-times me-2"></i> Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 