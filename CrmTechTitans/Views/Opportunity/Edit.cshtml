@using CrmTechTitans.Models.Enumerations
@model CrmTechTitans.Models.Opportunity

@{
    ViewData["Title"] = "Edit Opportunity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Breadcrumb Navigation -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Opportunity</a>
                    </li>

                    @if (Context.Request.Query["fromDetails"] == "true")
                    {
                        <li class="breadcrumb-item">
                            <a asp-action="Details" asp-route-id="@Model.ID" class="text-decoration-none">Details</a>
                        </li>
                    }

                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            <!-- Page Header -->
            <div class="mb-4">
                <h1 class="h3 mb-2">Edit Opportunity</h1>
                
            </div>

            <!-- Opportunity Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ID" />

                        <!-- Opportunity Details Section -->
                        <div class="row g-3 mb-4">
                            <!-- Title -->
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Title" class="form-label">Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Enter Opportunity Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Status -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<Status>()">
                                        <option value="">Select Status</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Priority -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Priority" class="form-label">Priority</label>
                                    <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<PriorityType>()">
                                        <option value="">Select Priority</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter opportunity description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                Back to Opportunites
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}