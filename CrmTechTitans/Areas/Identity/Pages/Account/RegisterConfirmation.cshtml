@page
@model CrmTechTitans.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope fa-3x text-primary"></i>
                    </div>
                    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                    
                    <p class="text-center">
                        We've sent an email to <strong>@Model.Email</strong> with a link to confirm your account.
                    </p>
                    
                    <p class="text-center">
                        Please check your email and follow the instructions to complete your registration.
                    </p>
                    
                    <p class="alert alert-info text-center mt-4">
                        <i class="fas fa-info-circle me-2"></i>
                        After confirming your email, an administrator will need to approve your account before you can access the system.
                    </p>
                    
                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <div class="alert alert-warning mt-4">
                            <p class="mb-2 fw-bold">
                                <i class="fas fa-code me-2"></i>
                                DEVELOPMENT MODE: Email Delivery Disabled
                            </p>
                            <p>
                                Emails are not being sent in development mode. Please use the link below to confirm your account:
                            </p>
                            <div class="mt-3 p-3 bg-dark text-white rounded text-break">
                                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="text-white text-decoration-underline">
                                    @Model.EmailConfirmationUrl
                                </a>
                            </div>
                            <p class="mt-3 mb-0 small">
                                <i class="fas fa-info-circle me-2"></i>
                                In production, this link would be sent to the user's email.
                            </p>
                        </div>
                    }
                    
                    <div class="text-center mt-4">
                        <a asp-page="./Login" class="btn btn-primary">Return to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 